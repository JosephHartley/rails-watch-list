<h1><%= @list.name %></h1>
<div class="row">
  <% @list.movies.each do |movie| %>
  <div class="col-sm-6">
    <div class="film-card">
      <img src="<%= movie.poster_url %>" />
      <div class="film-card-infos">
        <div>
          <h2><%= movie.title %> | <%= movie.rating %> stars</h2>
        </div>
        <div><p><%= movie.overview %></p></div>

        <h2></h2>
      </div>
    </div>
  </div>
  <% end %>
</div>
