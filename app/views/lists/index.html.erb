<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dxxpkt19k/image/upload/v1675368147/frdnk03qpa6468llsghl.jpg')">
  <div class="container">
    <h1>Welcome to Watchlistify</h1>
    <p>Save movies to your own watch lists.</p>
    <a><%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %></a>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"
  >
    <%= link_to "#{list.name}", list %>
  </div>
    <% end %>
  </div>
</div>
